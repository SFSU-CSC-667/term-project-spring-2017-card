extends layout

block contenet
    div#header( class="header page-header row", hidden=true)
        div( class="col-md-9")
            h2
                div#user(class="pull-left col-lg-6 text-primary")
        div( class="col-md-1" style="position: relative;")
            a( class="btn btn-warning" id="nav-button" href=".") Logout
        div( class="col-md-2" style="position: relative;")
            a( class="btn btn-link" id="nav-button" href="#") Home

    div#login-page( hidden=false, class="page login-page")
            div( class="center")
                ul(class="nav nav-tabs")
                    li
                        a( href="#login" data-toggle="tab" class="login-tab") Login
                    li(class="active")
                        a( href="#register" data-toggle="tab" class="login-tab") Register

                div(id="myTabContent" class="tab-content")
                    div( class="tab-pane fade" id="login")
                        form( action="/login", method="POST" id="login-form")
                            h2(class="login-title") Login
                            hr
                            input(id="username", name="username", type="text", class="form-control login-input", placeholder="Username")
                            br
                            input(id="password", name="password", type="password", class="form-control login-input", placeholder="Password")
                            br
                            div( id="login-error", hidden=true)
                            input(type="submit", value="Submit", name="submit", id="login-submit", class="login-button")

                    div( class="tab-pane active" id="register")
                        form( action="/register", method="POST" id="register-form")
                            h2(class="login-title") Register
                            hr
                            input(id="username-reg", name="username", type="text", class="form-control login-input", placeholder="Username")
                            br
                            input(id="password-reg", name="password", type="password", class="form-control login-input", placeholder="Password")
                            br
                            input(id="password-confirm", name="password2", type="password", class="form-control login-input", placeholder="Confirm password")
                            br
                            div( id="register-error", hidden=true)
                            input(type="submit", value="Submit", name="submit", id="register-submit", class="login-button")

    div#lobby(hidden=true)
        div(class="container-fluid")
            div(class="row")
                div(class="col-md-2")
                       h3 Leaderboard
                       ul(id="highscore" class="list-group")

                div(class="col-md-7 height-85 chat")
                    include chat-fragment.pug

                div( class="col-md-3" id="playButtonPosition")
                      a(id='playGame' class="btn btn-success" href="/game") PLAY GAME
